extends layout

block content
  h1= "Looking for someone? For a team?"

  form(name="get-user", method="post", action="/users/search")
    div.input
      span.label Name:
      input(type="text", name="name", value="")
      input(type="submit", value="Search")

  h1= "Choose a Train"
  p List of trains:
  nav
    ul(class="nav nav-pills")
      each t in trains
        li(class="my-nav-btn my-nav-btn-trains")
          a(href="/trains/#{t.Name}", style="background-image:linear-gradient(#eeeeee, #{t.color} 80%, #{t.color})") #{t.Name}
